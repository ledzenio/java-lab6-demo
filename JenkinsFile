pipeline {
    agent any

    options {
        timestamps()
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    environment {
        MAVEN_OPTS = '-Dmaven.test.failure.ignore=false'
    }

    triggers {
        pollSCM('H/2 * * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[url: 'https://github.com/ledzenio/java-lab6-demo.git']]
                ])
            }
        }

        stage('Build') {
            steps {
                bat 'mvn -v'
                bat 'mvn -B -U clean compile'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn -B test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                bat 'mvn -B package'
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }

        stage('Deploy (Demo)') {
            when {
                branch 'main'
            }
            steps {
                bat 'echo "=== DEMO: Testing the application ==="'
                bat 'echo "1. Showing initial tasks:"'
                bat 'java -jar target/java-lab6-demo-1.0.0.jar list'

                bat 'echo "2. Adding a new task:"'
                bat 'java -jar target/java-lab6-demo-1.0.0.jar add "CI/CD Demo Task"'

                bat 'echo "3. Completing a task:"'
                bat 'java -jar target/java-lab6-demo-1.0.0.jar complete 4'

                bat 'echo "4. Showing statistics:"'
                bat 'java -jar target/java-lab6-demo-1.0.0.jar stats'

                bat 'echo "=== DEMO COMPLETED ==="'
            }
        }
    }

    post {
        always {
            echo "Pipeline finished for branch: ${env.BRANCH_NAME}"
        }
        success {
            bat 'echo "BUILD SUCCESSFUL!"'
        }
        failure {
            bat 'echo "BUILD FAILED!"'
        }
    }
}